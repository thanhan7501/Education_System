extends ../layouts/staffMenu
block content

    h1 List Course Category
    table.table 
        tr 
            th Course Category Name
            th Option
        each category in categorys
            tr
                td
                    a(href='/staff/viewCourse/' + category.category)= category.category
                td
                    a.btn.btn-success(href='/staff/updateCourseCategory/' + category.id) Update 
                    a.btn.btn-danger.ml-4(href='/staff/deleteCourseCategory/'+ category.id) Delete 


    a.btn.btn-primary(href = '/staff/createCourseCategory') Create new Course Category 