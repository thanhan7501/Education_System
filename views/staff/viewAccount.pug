extends ../layouts/staffMenu
block content
    
    #accordion.mt-4                                             
        .card
            #headingThree.card-header
                h5.mb-0
                    button.btn.btn-link.collapsed(data-toggle='collapse' data-target='#collapseThree' aria-expanded='false' aria-controls='collapseThree')
                        | Trainer Account
            #collapseThree.collapse(aria-labelledby='headingThree' data-parent='#accordion')
                .card-body
                    table.table.mt-4 
                            tr 
                                th Name
                                th Actions 
                            each account in accountTrainer
                                tr
                                    td= account.name
                                    td
                                        a.btn.btn-success(href='/staff/updateAccountTrainer/'+ account.username) Update 
                                        a.btn.btn-danger.ml-4(href='/staff/deleteAccount/'+ account.username) Delete

        .card
            #headingFour.card-header
                h5.mb-0
                    button.btn.btn-link.collapsed(data-toggle='collapse' data-target='#collapseFour' aria-expanded='false' aria-controls='collapseFour')
                        | Trainee Account
            #collapseFour.collapse(aria-labelledby='headingFour' data-parent='#accordion')
                .card-body
                    table.table.mt-4 
                            tr 
                                th Name
                                th Actions 
                            each account in accountTrainee
                                tr
                                    td= account.name
                                    td
                                        a.btn.btn-success(href='/staff/updateAccountTrainee/'+ account.username) Update 
                                        a.btn.btn-danger.ml-4(href='/staff/deleteAccount/'+ account.username) Delete

    
    button.btn.btn-primary.mt-4(type='button' data-toggle='modal' data-target='#exampleModal') Create new Account
    // Modal
    #exampleModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#exampleModalLabel.modal-title Chon doi tuong ban muon tao tai khoan
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                    span(aria-hidden='true') Ã—
                .modal-body
                    | Chon doi tuong muon tao tai khoan nhe!
                .modal-footer
                    a.btn.btn-secondary.mt-4(data-dismiss='modal') Close
                    a.btn.btn-primary.mt-4(href = '/staff/createAccountTrainer') Trainer
                    a.btn.btn-primary.mt-4(href = '/staff/createAccountTrainee') Trainee

