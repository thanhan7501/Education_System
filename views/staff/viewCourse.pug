extends ../layouts/staffMenu
block content

    h1 List Course
    table.table 
        tr 
            th Course Name
            th Actions 
        each course in courses
            tr
                td
                    a(href='/staff/viewCourseDetail/' + course.courseName)= course.courseName
                td
                    a.btn.btn-success(href='/staff/updateCourse/'+ course.id) Update 
                    a.btn.btn-danger.ml-4(href='/staff/deleteCourse/'+ course.id) Delete 


    a.btn.btn-primary(href = '/staff/createCourse/' + category) Create new Course