extends ../layouts/staffMenu
block content
    h1 Create account for Admin

    .align-items-center
        form(action="/staff/updateAccountAdmin/" + account.username method="POST")
            .form-group 
                label Name
                input.form-control(name="name", type='text', value=""+ account.name ) 

                label User Name
                input.form-control(name="username", type='text', value=""+ account.username ) 

                label Password
                input.form-control(name="password", type='password', value=""+ account.password)

                label Date of birth
                input.form-control(name="dateofbirth", type='date', value="")

                input.form-control(name="role", type='hidden', value='admin')

            button.btn.btn-success Update