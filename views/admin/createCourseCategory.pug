extends ../layouts/adminMenu
block content
    h1 Create Course Category 

    if errors
        each error in errors
            .alert.alert-danger= error

    .align-items-center
        form(action="/admin/createCourseCategory" method="POST")
            .form-group 
                label Course Category name
                input.form-control(name="category", type='text', value= values ? values.code : '') 

            button.btn.btn-success Create